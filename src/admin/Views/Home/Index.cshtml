@model System.Collections.Generic.IEnumerable<StormStyleTransfer.Admin.Core.Domain.ReferenceStyle>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <h2>Existing Reference Styles</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Details</th>
                <th>Processing Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.ModelName</td>
                    <td><img src="@Url.Action("Index", "Image", new {id=item.Id})" style="width:200px"/></td>
                    <td>@item.Title<br/>@item.Artist</td>
                    <td>@item.Status</td>
                    <td><a asp-controller="Detail" class="btn btn-default">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>